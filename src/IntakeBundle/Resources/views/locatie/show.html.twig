{% extends "@Intake/base.html.twig" %}

{% block body %}
    <h1>Locatie</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ locatie.id }}</td>
            </tr>
            <tr>
                <th>Plaats</th>
                <td>{{ locatie.plaats }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ locatie.adres }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ locatie.postcode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-info" href="{{ path('locatie_index') }}">Back to the list</a>
        </li>
        {% if is_granted("ROLE_ADMIN") %}
        <li>
            <a class="btn btn-success" href="{{ path('locatie_edit', { 'id': locatie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
