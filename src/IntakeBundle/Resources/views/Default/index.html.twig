{% extends "@Intake/base.html.twig" %}
{% block body %}
    <div class="content">
        {% if app.User %}
            {% if is_granted("ROLE_ADMIN") %}
                <h2 class="title">Welkom admin {{ app.User }}</h2>
            {% else %}
                <h2 class="title">Welkom {{ app.User }}</h2>
            {% endif %}
        {% else %}
            <h2 class="title">Welkom bij MBORijnland</h2>
            <a class="btn btn-primary" href="{{ path('fos_user_security_login') }}">
                {{ 'inloggen' }}
            </a>
        {% endif %}

    </div>
{% endblock %}
{% block fos_user_content %}{% endblock %}